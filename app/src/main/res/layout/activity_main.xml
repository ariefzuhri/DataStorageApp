<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    tools:ignore="HardcodedText"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Text"
            android:inputType="textCapSentences"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/btn_save_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Simpan File SP"
            android:onClick="saveFileSP"/>

        <Button
            android:id="@+id/btn_save_is"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan File IS"
            android:onClick="saveFileIS"/>

        <Button
            android:id="@+id/btn_save_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan File ES"
            android:onClick="saveFileES"/>

        <Button
            android:id="@+id/btn_delete_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus File SP"
            android:layout_marginTop="8dp"
            android:onClick="deleteFileSP"/>

        <Button
            android:id="@+id/btn_delete_is"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus File IS"
            android:onClick="deleteFileIS"/>

        <Button
            android:id="@+id/btn_delete_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus File ES"
            android:onClick="deleteFileES"/>

        <Button
            android:id="@+id/btn_read_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Baca File SP"
            android:onClick="readFileSP"/>

        <Button
            android:id="@+id/btn_read_is"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baca File IS"
            android:onClick="readFileIS"/>

        <Button
            android:id="@+id/btn_read_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baca File ES"
            android:onClick="readFileES"/>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:background="@color/teal_700"
            android:textColor="@color/white"
            android:hint="Hasil baca file"/>
    </LinearLayout>
</ScrollView>